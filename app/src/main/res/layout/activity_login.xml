<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.hdefi.joesema.hdefi.LoginActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="143dp"
        android:layout_height="168dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/bLogin"
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="78dp"
        android:text="Login" />

    <EditText
        android:id="@+id/etLogPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="72dp"
        android:ems="10"
        android:hint="Psu Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/etLogEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="abc123@psu.edu"
        android:inputType="textEmailAddress"
        android:layout_above="@+id/etLogPassword"
        android:layout_alignLeft="@+id/etLogPassword"
        android:layout_alignStart="@+id/etLogPassword" />

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:text="Don't have an account? Register Here!" />



</RelativeLayout>
